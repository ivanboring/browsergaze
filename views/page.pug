html
  head
    title=title
    link(rel='stylesheet', href='/css/bootstrap/bootstrap.css')
    link(rel='stylesheet', href='/css/dashboard.css')
    link(rel='stylesheet', href='/css/all.css')
    script(src="/js/jquery.min.js")
    script(src="/js/bootstrap.bundle.js")
    script(src="/js/js.cookie.js")
    script(src="/js/dashboard.min.js")
  body
    div(class="main-content")
      nav(class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom")
        div(class="container")
          div(class="collapse navbar-collapse", id="navbarSupportedContent")
            ul(class="navbar-nav align-items-center ml-md-auto")
              li(class="nav-item dropdown")
                a(class="nav-link", href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                  div(class="sidenav-toggler sidenav-toggler-dark active", data-action="sidenav-on", data-target="#sidenav-main")
                    div(class="sidenav-toggler-inner")
                      i(class="sidenav-toggler-line")
                      i(class="sidenav-toggler-line")
                      i(class="sidenav-toggler-line")
                div(class="dropdown-menu dropdown-menu-lg dropdown-menu-dark bg-default dropdown-menu-right")
                  div(class="row shortcuts px-4")
                    a(class="col-4 shortcut-item", href="/projects")
                      span(class="shortcut-media avatar rounded-circle bg-gradient-red")
                        i(class="fas fa-object-ungroup")
                      small
                        | Projects
                    a(class="col-4 shortcut-item", href="#4")
                      span(class="shortcut-media avatar rounded-circle bg-gradient-red")
                        i(class="fas fa-file-medical-alt")
                      small
                        | Results
                    if isAdmin
                      a(class="col-4 shortcut-item", href="#4")
                        span(class="shortcut-media avatar rounded-circle bg-gradient-red")
                          i(class="fas fa-desktop")
                        small
                          | Devices
                  if isAdmin
                    div(class="row shortcuts px-4")
                      a(class="col-4 shortcut-item", href="/projects")
                        span(class="shortcut-media avatar rounded-circle bg-gradient-red")
                          i(class="fas fa-user-friends")
                        small
                          | Users
            ul(class="navbar-nav align-items-center ml-auto ml-md-0")
              li(class="nav-item dropdown")
                a(class="nav-link", href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                  div(class="media align-items-center")
                    i(class="far fa-user-circle")
                    div(class="media-body ml-2 d-none d-lg-block")
                      span(class="mb-0 text-sm font-weight-bold")
                        | #{user.first_name}
                div(class="dropdown-menu dropdown-menu-right")
                  div(class="dropdown-header noti-title")
                    h6
                      | Hello!
                  a(href="#" class="dropdown-item")
                    | My Profile
                  div(class="dropdown-divider")
                  a(href="logout" class="dropdown-item")
                    | Logout
      block content